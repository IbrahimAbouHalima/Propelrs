<% layout('layouts/boilerplate') %>
<div class="container is-max-desktop">
  <h1 class="title">Report an Issue</h1>
  <form action="/issues/report" method="POST">
    <div class="field">
      <label class="label">Title</label>
      <div class="control">
        <input class="input" type="text" name="title" placeholder="Issue title" required>
      </div>
    </div>
    <div class="field">
      <label class="label">Description</label>
      <div class="control">
        <textarea class="textarea" name="description" placeholder="Describe the issue..." required></textarea>
      </div>
    </div>
    <div class="control">
      <button class="button is-link" type="submit">Submit</button>
    </div>
  </form>
</div>