<div id="cookie-overlay" class="overlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 9998;"></div>

<div id="cookie-banner" class="notification is-dark" style="display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 9999; width: 80%; max-width: 600px; padding: 30px; border-radius: 8px; text-align: center;">
  <p>
    This website uses cookies to ensure you get the best experience. By using our website, you agree to our
    <a href="/terms" class="has-text-white has-text-weight-bold" style="text-decoration: underline;">Terms of Service</a>.
  </p>
  <div>
    <button id="accept-cookies" class="button is-success is-small mt-3">I Accept</button>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    if (!localStorage.getItem('cookiesAccepted')) {
      if (window.location.pathname !== '/terms') {
        document.getElementById('cookie-banner').style.display = 'block';
      }
    }

    document.getElementById('accept-cookies').addEventListener('click', () => {
      localStorage.setItem('cookiesAccepted', 'true');
      document.getElementById('cookie-banner').style.display = 'none';
    });
  });
</script>